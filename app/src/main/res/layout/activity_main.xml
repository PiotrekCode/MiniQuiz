<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/glowny_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="top|center_horizontal"
    android:background="#FFFFFF"
    android:padding="20dp"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageViewTop"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="16dp"
        android:contentDescription="Logo quizu"
        app:srcCompat="@drawable/miniquiz" />

    <TextView
        android:id="@+id/tytul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:gravity="center"
        android:text="Mini Quiz"
        android:textSize="28sp"
        android:textStyle="bold" />


    <LinearLayout
        android:id="@+id/obszarPytania"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="@android:drawable/dialog_holo_light_frame"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="12dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/polePytanie"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:text="Pytanie"
            android:textSize="20sp" />

        <Button
            android:id="@+id/przyciskA"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="A" />

        <Button
            android:id="@+id/przyciskB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="B" />

        <Button
            android:id="@+id/przyciskC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text="C" />
    </LinearLayout>

    <Button
        android:id="@+id/przyciskRozpocznij"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:text="ROZPOCZNIJ QUIZ" />


    <TextView
        android:id="@+id/napisWynik"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="12dp"
        android:gravity="center"
        android:text="Wynik: 0"
        android:textSize="18sp" />


    <Button
        android:id="@+id/przyciskResetuj"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="RESETUJ QUIZ"
        android:visibility="gone" />

  
    <TextView
        android:id="@+id/autor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        android:text="Autor: Piotr Lukawski"
        android:textSize="16sp" />


    <ImageView
        android:id="@+id/imageViewBottom"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="16dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:contentDescription="Obraz na dole"
        app:srcCompat="@drawable/miniquiz" />

</LinearLayout>
